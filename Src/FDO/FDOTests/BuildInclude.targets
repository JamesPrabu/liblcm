<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">
	<ItemGroup>
		<remotingTcpServerConfig Include="$(fwroot)/Src/Common/FwRemoteDatabaseConnectorService/remoting_tcp_server.config" />
	</ItemGroup>
	<Target Name="AfterClean">
		<Message Importance="high" Text="Delete: %(remotingTcpServerConfig.FullPath)" />
		<Delete Files="@(remotingTcpServerConfig -&gt; '$(OutDir)/%(Identity)')" ContinueOnError="true" />
	</Target>
	<Target Name="BeforeBuild">
		<!-- whatever commands we need to run before the rest of the build-->
		<Message Importance="high" Text="Copying %(remotingTcpServerConfig.FullPath) to $(OutDir)" />
		<Copy SourceFiles="@(remotingTcpServerConfig)" DestinationFolder="$(OutDir)" OverwriteReadOnlyFiles="true" SkipUnchangedFiles="true" />
	</Target>
</Project>
